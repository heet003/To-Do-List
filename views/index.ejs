<%- include('header.ejs')-%>
    <div id="container">
        <h1>To-Do-List</h1>
        <h3>
            <%=today%>
        </h3>
        <form action="/" method="post">
            <input type="text" name="addItem" id="input-item" placeholder="Add Task">
            <button>+</button>
        </form>
        <ul id="ul-list">
            <%for (var i=0; i < newListItem.length; i++) { %>
                <li id="li-item">
                    <input type="checkbox" name="item" id="input-checkbox">
                    <label for="input-checkbox" class="p">
                        <%=newListItem[i]%>
                </li></label>
                <% }%>
        </ul>
    </div>
    <%- include('footer.ejs')-%>